.side-bar
  .side-header
    .side-header__left
      = current_user.name
    .side-header__right
      =link_to new_group_path, class: "side-header__btn" do
        =icon('fas', 'edit')
        %span<>
      =link_to edit_user_path(current_user) do
        =icon('fas', 'cog', class: "side-header__btn")
        %span<>

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group),class:"group__btn" do
          .group__name
            = group.name
          .group__menber
            = group.show_last_message

